extends layout

block content
  h1= title
  p Welcome to #{title}, a website to help you handling your reading list.
  p You are not logged in.
  form
    table
      tr
        td: label(for="username") Username
        td: input(type="text", name="username", id="username")
      tr
        td: label(for="password") Password
        td: input(type="password", name="password", id="password")
      tr(style="text-align: center")
        td(colspan=2)
          input(onclick="login_or_signup('login')", type="button", value="Log in")
          &nbsp;&nbsp;&nbsp;&nbsp;
          input(onclick="login_or_signup('signup')", type="button", value="Sign up")
