extends layout

block content
  h1 Tags
  - for (const data of tags)
    div.tags_list
      span(style='background-color: #' + data.color).tag: a(href='/articles/tagged/' + data.name)= data.name
      div.edit_note
        span(onclick="edit_tag('" + data.name + "')") 📝&nbsp;&nbsp;
        span.red.big(onclick="delete_tag('" + data.name + "')") &times;

  if tags.length === 0
    p No tag

  button#add(onclick="add_tag()"): +

